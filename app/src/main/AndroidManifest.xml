    package="br.com.whatsappandroid.cursoandroid.focar">

    <uses-permission android:name="android.permission.VIBRATE"/>

    //android:name=".slowSplash"
    <application
        android:name=".MyApp"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/focus_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/focus_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
        <activity
            android:name=".FocoActivity"
            android:label="@string/title_activity_foco"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AviaoActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".RespireActivity" />
        <activity android:name=".StatActivity" />
    </application>

</manifest>